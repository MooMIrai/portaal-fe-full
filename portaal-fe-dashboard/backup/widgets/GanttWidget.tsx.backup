import React, { useMemo } from 'react';
import {
  Chart,
  ChartTitle,
  ChartTooltip,
  ChartCategoryAxis,
  ChartCategoryAxisItem,
  ChartValueAxis,
  ChartValueAxisItem,
  ChartSeries,
  ChartSeriesItem
} from '@progress/kendo-react-charts';
import { Card, CardHeader, CardBody } from '@progress/kendo-react-layout';
import { GanttConfig, ComputedData, isGanttConfig } from '../../../types/widgetConfig.types';
import { Widget } from '../../../types/widget.types';
import '@progress/kendo-theme-default/dist/all.css';

interface GanttWidgetProps {
  widget: Widget;
  data: any[];
  config: GanttConfig;
  computed?: ComputedData;
  metadata?: any;
  currentFilters?: Record<string, any>;
}

export const GanttWidget: React.FC<GanttWidgetProps> = ({
  widget,
  data,
  config,
  computed,
  metadata,
  currentFilters
}) => {
  // Validate config
  if (!isGanttConfig(config)) {
    console.error('Invalid gantt configuration', config);
    return <div>Configurazione widget non valida</div>;
  }

  // Process data - convert date strings to Date objects
  const chartData = useMemo(() => {
    if (!data || !Array.isArray(data)) return [];
    
    return data.map(item => {
      const processedItem = { ...item };
      
      // Convert from field to Date
      if (config.fromField && item[config.fromField]) {
        processedItem[config.fromField] = new Date(item[config.fromField]);
      }
      
      // Convert to field to Date
      if (config.toField && item[config.toField]) {
        processedItem[config.toField] = new Date(item[config.toField]);
      }
      
      return processedItem;
    });
  }, [data, config.fromField, config.toField]);

  // Get categories from computed data or extract from data
  const categories = useMemo(() => {
    if (computed?.categories) {
      return computed.categories;
    }
    
    // Extract unique categories from data
    const uniqueCategories = new Set<string>();
    chartData.forEach(item => {
      if (item[config.categoryField]) {
        uniqueCategories.add(item[config.categoryField]);
      }
    });
    
    return Array.from(uniqueCategories);
  }, [computed, chartData, config.categoryField]);

  // Parse date range
  const dateRange = useMemo(() => {
    if (computed?.dateRange) {
      return {
        min: new Date(computed.dateRange.min),
        max: new Date(computed.dateRange.max)
      };
    }
    
    // Calculate from data if not provided
    let minDate: Date | null = null;
    let maxDate: Date | null = null;
    
    chartData.forEach(item => {
      const fromDate = item[config.fromField];
      const toDate = item[config.toField];
      
      if (fromDate && (!minDate || fromDate < minDate)) {
        minDate = fromDate;
      }
      if (toDate && (!maxDate || toDate > maxDate)) {
        maxDate = toDate;
      }
    });
    
    // Add some padding
    if (minDate) {
      minDate = new Date(minDate);
      minDate.setMonth(minDate.getMonth() - 1);
    }
    if (maxDate) {
      maxDate = new Date(maxDate);
      maxDate.setMonth(maxDate.getMonth() + 1);
    }
    
    return { min: minDate, max: maxDate };
  }, [computed, chartData, config.fromField, config.toField]);

  // Format parameters display
  const formattedParameters = useMemo(() => {
    if (!currentFilters || Object.keys(currentFilters).length === 0) {
      return null;
    }
    
    return Object.entries(currentFilters)
      .map(([key, value]) => `${key}: ${value}`)
      .join(' | ');
  }, [currentFilters]);

  return (
    <Card style={{ width: '100%', height: '100%', display: 'flex', flexDirection: 'column' }}>
      <CardHeader className="bg-gray-50" style={{ flexShrink: 0, padding: '12px 16px' }}>
        <h3 className="text-lg font-semibold">{config.title || widget.name}</h3>
        {config.description && (
          <p className="text-sm text-gray-600 mt-1">{config.description}</p>
        )}
        {formattedParameters && (
          <div className="text-sm text-gray-500 mt-1">{formattedParameters}</div>
        )}
      </CardHeader>
      <CardBody style={{ flex: 1, minHeight: 0, padding: '16px', display: 'flex', flexDirection: 'column', overflow: 'hidden' }}>
        <div style={{ flex: 1, width: '100%', height: '100%', minHeight: '400px' }}>
          <Chart style={{ width: '100%', height: '100%' }}>
            {config.title && <ChartTitle text={config.title} />}
            
            <ChartTooltip 
              visible={config.showTooltip !== false}
              format={config.tooltipFormat || "{0}: {1:dd/MM/yyyy} - {2:dd/MM/yyyy}"}
              shared={true}
            />
            
            <ChartCategoryAxis>
              <ChartCategoryAxisItem 
                categories={categories}
                reverse={config.reverseCategories !== false}
                majorGridLines={{ visible: config.showGridLines !== false }}
              />
            </ChartCategoryAxis>
            
            <ChartValueAxis>
              <ChartValueAxisItem 
                type="date"
                baseUnit={config.baseUnit || 'months'}
                labels={{ 
                  format: `{0:${config.dateFormat || 'MMM yyyy'}}`,
                  rotation: -45
                }}
                min={dateRange.min}
                max={dateRange.max}
                majorGridLines={{ visible: true }}
              />
            </ChartValueAxis>
            
            <ChartSeries>
              <ChartSeriesItem 
                type="rangeBar"
                data={chartData}
                categoryField={config.categoryField}
                fromField={config.fromField}
                toField={config.toField}
                color={config.color || '#27a2e9'}
              />
            </ChartSeries>
          </Chart>
        </div>
        
        {computed?.summary && (
          <div className="mt-4 p-3 bg-gray-50 rounded text-sm">
            <div className="grid grid-cols-3 gap-4">
              {computed.summary.totalItems && (
                <div>
                  <span className="text-gray-600">Totale attivit√†:</span>
                  <span className="ml-2 font-semibold">{computed.summary.totalItems}</span>
                </div>
              )}
              {metadata?.lastUpdated && (
                <div>
                  <span className="text-gray-600">Ultimo aggiornamento:</span>
                  <span className="ml-2 font-semibold">
                    {new Date(metadata.lastUpdated).toLocaleString('it-IT')}
                  </span>
                </div>
              )}
            </div>
          </div>
        )}
      </CardBody>
    </Card>
  );
};