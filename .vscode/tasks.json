{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Dev Servers",
      "type": "shell",
      "command": "yarn dev",
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^.*$",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Starting development servers",
          "endsPattern": "All dev servers started"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "group": "dev"
      }
    },
    {
      "label": "Start Core Only",
      "type": "shell",
      "command": "yarn dev:core",
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^.*$"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "webpack",
          "endsPattern": "Compiled successfully"
        }
      }
    },
    {
      "label": "Start Common Library",
      "type": "shell",
      "command": "yarn dev:common",
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^.*$"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "webpack",
          "endsPattern": "Compiled successfully"
        }
      }
    },
    {
      "label": "Build Production",
      "type": "shell",
      "command": "yarn build:prod",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "Preview Production Build",
      "type": "shell",
      "command": "yarn preview",
      "dependsOn": "Build Production",
      "problemMatcher": []
    },
    {
      "label": "Clean All",
      "type": "shell",
      "command": "yarn clean",
      "problemMatcher": []
    },
    {
      "label": "Install Dependencies",
      "type": "shell",
      "command": "yarn install",
      "problemMatcher": []
    }
  ]
}
