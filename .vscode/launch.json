{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "üåê Debug Core App (Chrome)",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/portaal-fe-core/src",
      "sourceMapPathOverrides": {
        "webpack://portaal/*": "${webRoot}/*"
      },
      "preLaunchTask": "Start Dev Servers"
    },
    {
      "name": "üîó Attach to Chrome (All Modules)",
      "type": "chrome",
      "request": "attach",
      "port": 9222,
      "webRoot": "${workspaceFolder}",
      "sourceMapPathOverrides": {
        "webpack://portaal/*": "${workspaceFolder}/portaal-fe-core/src/*",
        "webpack://common/*": "${workspaceFolder}/portaal-fe-common/src/*",
        "webpack://auth/*": "${workspaceFolder}/portaal-fe-auth/src/*",
        "webpack://sales/*": "${workspaceFolder}/portaal-fe-sales/src/*",
        "webpack://hr/*": "${workspaceFolder}/portaal-fe-hr/src/*"
      },
      "urlFilter": "http://localhost:*"
    },
    {
      "name": "üöÄ Debug Core Only",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/portaal-fe-core/src",
      "runtimeArgs": [
        "--remote-debugging-port=9222"
      ]
    },
    {
      "name": "üîß Debug Single Module: Auth",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3006",
      "webRoot": "${workspaceFolder}/portaal-fe-auth/src"
    },
    {
      "name": "üîß Debug Single Module: Sales",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3008",
      "webRoot": "${workspaceFolder}/portaal-fe-sales/src"
    },
    {
      "name": "üîß Debug Single Module: HR",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3009",
      "webRoot": "${workspaceFolder}/portaal-fe-hr/src"
    },
    {
      "name": "üì¶ Debug Common Library",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3003",
      "webRoot": "${workspaceFolder}/portaal-fe-common/src"
    },
    {
      "name": "üé¨ Debug Production Preview (with build)",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}",
      "sourceMapPathOverrides": {
        "webpack://core/*": "${workspaceFolder}/portaal-fe-core/src/*",
        "webpack://common/*": "${workspaceFolder}/portaal-fe-common/src/*",
        "webpack://auth/*": "${workspaceFolder}/portaal-fe-auth/src/*",
        "webpack://sales/*": "${workspaceFolder}/portaal-fe-sales/src/*",
        "webpack://hr/*": "${workspaceFolder}/portaal-fe-hr/src/*",
        "webpack://stock/*": "${workspaceFolder}/portaal-fe-stock/src/*",
        "webpack://lookups/*": "${workspaceFolder}/portaal-fe-lookUps/src/*",
        "webpack://recruiting/*": "${workspaceFolder}/portaal-fe-recruiting/src/*",
        "webpack://notification/*": "${workspaceFolder}/portaal-fe-notifications/src/*",
        "webpack://reports/*": "${workspaceFolder}/portaal-fe-reports/src/*",
        "webpack://chatbot/*": "${workspaceFolder}/portaal-fe-chatbot/src/*",
        "webpack://personalarea/*": "${workspaceFolder}/portaal-fe-personalarea/src/*"
      },
      "preLaunchTask": "Preview Production Build"
    },
    {
      "name": "‚ö° Debug Production Preview (serve only)",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}",
      "sourceMapPathOverrides": {
        "webpack://core/*": "${workspaceFolder}/portaal-fe-core/src/*",
        "webpack://common/*": "${workspaceFolder}/portaal-fe-common/src/*",
        "webpack://auth/*": "${workspaceFolder}/portaal-fe-auth/src/*",
        "webpack://sales/*": "${workspaceFolder}/portaal-fe-sales/src/*",
        "webpack://hr/*": "${workspaceFolder}/portaal-fe-hr/src/*",
        "webpack://stock/*": "${workspaceFolder}/portaal-fe-stock/src/*",
        "webpack://lookups/*": "${workspaceFolder}/portaal-fe-lookUps/src/*",
        "webpack://recruiting/*": "${workspaceFolder}/portaal-fe-recruiting/src/*",
        "webpack://notification/*": "${workspaceFolder}/portaal-fe-notifications/src/*",
        "webpack://reports/*": "${workspaceFolder}/portaal-fe-reports/src/*",
        "webpack://chatbot/*": "${workspaceFolder}/portaal-fe-chatbot/src/*",
        "webpack://personalarea/*": "${workspaceFolder}/portaal-fe-personalarea/src/*"
      },
      "preLaunchTask": "Serve Production Build"
    }
  ],
  "compounds": [
    {
      "name": "üéØ Debug Full Application",
      "configurations": [
        "üåê Debug Core App (Chrome)"
