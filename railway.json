{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "yarn railway:build",
    "watchPatterns": [
      "portaal-fe-*/src/**",
      "portaal-fe-*/webpack.config.js",
      "portaal-fe-*/.env.production",
      "scripts/**",
      "package.json"
    ]
  },
  "deploy": {
    "startCommand": "HOST=0.0.0.0 npx serve dist -p $PORT -s",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
